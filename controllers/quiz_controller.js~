exports.answer = function(req , res) {
   if (req.query.respuesta === 'Roma') {
      res.render('quizes/answer' , {respuesta: 'Correcto'});
} else {
   res.render('quizes/answer' , {respuesta: 'Incorrecto'});
}
};
